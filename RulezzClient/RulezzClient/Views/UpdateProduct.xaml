<UserControl x:Class="RulezzClient.Views.UpdateProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RulezzClient.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border Margin="10,5,10,10" Grid.Column="0" CornerRadius="4,4,4,4" BorderBrush="#193441" BorderThickness="2,2,2,2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Текущий магазин" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" />
            <TextBox Text="{Binding OldStore, Mode=OneWay}" Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center" Width="Auto" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" BorderBrush="#FFFAFCFF" />
            <Label Content="Текущая номенклатурная группа" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" />
            <TextBox Text="{Binding OldNomenclatureGroup, Mode=OneWay}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" BorderBrush="White" VerticalContentAlignment="Center"/>
            <Label Content="Текущая номенклатурная подгруппа" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" />
            <TextBox Text="{Binding OldNomenclatureSubGroup, Mode=OneWay}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" IsEnabled="False" BorderBrush="#FFFDFEFF" VerticalContentAlignment="Center"/>
            <Label Content="Текущее наименование товара" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" />
            <TextBox Text="{Binding OldTitle, Mode=OneWay}"  HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" BorderBrush="#FFFCFDFF"/>
            <Label Content="Текущий артикул товара" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" />
            <TextBox Text="{Binding OldVendorCode, Mode=OneWay}" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" BorderBrush="White"/>
            <Label Content="Текущий штрих код" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" />
            <TextBox Text="{Binding OldBarcode, Mode=OneWay}" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="5" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" BorderBrush="White"/>
            <Label Content="Текущая ед. хранения" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" />
            <TextBox Text="{Binding OldUnitStorage, Mode=OneWay}" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" BorderBrush="White" VerticalContentAlignment="Center"/>
            <Label Content="Текущая гарантия" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" />
            <TextBox Text="{Binding OldWarranty, Mode=OneWay}" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="7" VerticalAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" BorderBrush="#FFFAFCFF" VerticalContentAlignment="Center"/>
        </Grid>
        </Border>
        <Border Margin="10,5,10,10" Grid.Column="1" CornerRadius="4,4,4,4" BorderBrush="#193441" BorderThickness="2,2,2,2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <local:AddProduct/>
        </Border>
    </Grid>
</UserControl>
