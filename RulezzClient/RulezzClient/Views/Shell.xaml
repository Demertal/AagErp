<Window x:Class="RulezzClient.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:RulezzClient.Views"
    xmlns:viewModels="clr-namespace:RulezzClient.ViewModels"
    mc:Ignorable="d"
    Title="Главное окно" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" MinHeight="400" SizeToContent="WidthAndHeight" Padding="0,0,10,0">
    <Window.DataContext>
        <viewModels:ShellViewModel/>
    </Window.DataContext>
    <Grid>
        <Menu Height="23" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center">
            <MenuItem Height="20"  Header="Рабочее место кассира"/>
            <MenuItem Height="20"  Header="Показать товар" Command="{Binding ShowProductCommand}"/>
            <MenuItem Header="Действия с товаром">
                <MenuItem Header="Добавить товар" Command="{Binding AddProductMainCommand}"/>
                <MenuItem Header="Переоценка товара" Command="{Binding RevaluationCommand}"/>
                <MenuItem Header="Принять товар" Command="{Binding PurchaseInvoiceCommand}"/>
            </MenuItem>
            <MenuItem Header="Действия с...">
                <MenuItem Header="Структурой" Command="{Binding ShowStructCommand}"/>
                <MenuItem Header="Ед. хранения" Command="{Binding ShowUnitStorageCommand}"/>
            </MenuItem>
        </Menu>
        <views:ShowProduct Margin="10, 28, 0, 0" Visibility="{Binding IsProductGroupVisible}"/>
        <views:ShowGroup Margin="10, 28, 0, 0" Visibility="{Binding IsStructGroupVisible}" Padding="0,0,10,0"/>
        <views:ShowUnitStorage Margin="10, 28, 0, 0" Visibility="{Binding IsUnitStorageVisible}" Padding="0,0,10,0"/>
    </Grid>
</Window>
