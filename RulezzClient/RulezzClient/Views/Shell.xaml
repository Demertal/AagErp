<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:RulezzClient.Views"
    xmlns:mvvm="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:RulezzClient.ViewModels" x:Class="RulezzClient.Views.Shell"
    mc:Ignorable="d"
    Title="Главное окно" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" MinHeight="400" SizeToContent="WidthAndHeight" Padding="0,0,10,0">
    <Window.DataContext>
        <viewModels:ShellViewModel/>
    </Window.DataContext>
    <Grid>
        <Menu Height="23" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center">
            <MenuItem Height="20"  Header="Рабочее место кассира" AutomationProperties.IsColumnHeader="True"/>
            <MenuItem Height="20"  Header="Показать товар" AutomationProperties.IsColumnHeader="True" Command="{Binding ShowProductCommand}"/>
            <MenuItem Header="Добавить товар" Command="{Binding AddProductMainCommand}"/>
            <MenuItem Header="Показать структуру" Command="{Binding ShowStructCommand}"/>
        </Menu>
        <views:ShowProduct Margin="10, 28, 0, 0" Visibility="{Binding IsProductGroupVisible}" Padding="0,0,10,0"/>
        <views:ShowGroup Margin="10, 28, 0, 0" Visibility="{Binding IsStructGroupVisible}" Padding="0,0,10,0"/>
    </Grid>
</Window>
