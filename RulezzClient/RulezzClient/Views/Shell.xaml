<Window x:Class="RulezzClient.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="http://prismlibrary.com/"
    xmlns:rulezzClient="clr-namespace:RulezzClient"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:views1="clr-namespace:RulezzClient.Views"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d"
    Title="Главное окно" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" HorizontalAlignment="Center"
    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" MinHeight="400" MinWidth="400"
    SizeToContent="WidthAndHeight" Padding="0,0,10,0">

    <Window.Resources>
        <rulezzClient:VisibilityFromRole x:Key="VisibilityFromRole"/>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <mvvm:InvokeCommandAction Command="{Binding Path=LoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Menu Height="23" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" Visibility="{Binding Converter={StaticResource VisibilityFromRole}, Path=Role}" FontSize="14">
            <MenuItem Height="20"  Header="Рабочее место кассира" Command="{Binding NavigateCommand}" CommandParameter="CashierWorkplace"
                      Visibility="{Binding Converter={StaticResource VisibilityFromRole}, Path=Role, ConverterParameter=CashierWorkplace}"/>
            <MenuItem Height="20"  Header="Номенклатура" Command="{Binding NavigateCommand}" CommandParameter="ShowProduct"
                      Visibility="{Binding Converter={StaticResource VisibilityFromRole}, Path=Role, ConverterParameter=ShowProduct}"/>
            <MenuItem Header="Действия с товаром"  Visibility="{Binding Converter={StaticResource VisibilityFromRole}, Path=Role, ConverterParameter=WorkProduct}">
                <MenuItem Header="Переоценка товара" Command="{Binding NavigateCommand}" CommandParameter="RevaluationProductsView"/>
                <MenuItem Header="Приход товара" Command="{Binding NavigateCommand}" CommandParameter="PurchaseGoods"/>
            </MenuItem>
            <MenuItem Header="Справочники"  Visibility="{Binding Converter={StaticResource VisibilityFromRole}, Path=Role, ConverterParameter=Directories}">
                <MenuItem Header="Контрагенты">
                    <MenuItem Header="Поставщики" Command="{Binding NavigateCommand}" CommandParameter="ShowSuppliers"/>
                    <MenuItem Header="Покупатели" Command="{Binding NavigateCommand}" CommandParameter="ShowCustomers"/>
                </MenuItem>
                <MenuItem Header="Ед. хранения" Command="{Binding NavigateCommand}" CommandParameter="ShowUnitStorage"/>
                <MenuItem Header="Гарантийный период" Command="{Binding NavigateCommand}" CommandParameter="ShowWarrantyPeriods"/>
                <MenuItem Header="Переоценки" Command="{Binding NavigateCommand}" CommandParameter="ShowRevaluationReports"/>
                <MenuItem Header="Закупки" Command="{Binding NavigateCommand}" CommandParameter="ShowPurchaseReports"/>
                <MenuItem Header="Продажи" Command="{Binding NavigateCommand}" CommandParameter="ShowSalesReports"/>
                <MenuItem Header="Изменить курс USD" Command="{Binding СhangeСourseCommand}">
                    <i:Interaction.Triggers>
                        <mvvm:InteractionRequestTrigger SourceObject="{Binding Path=СhangeСoursePopupRequest}">
                            <mvvm:PopupWindowAction IsModal="True" CenterOverAssociatedObject="True" WindowStyle="{DynamicResource MyWindowStyle}">
                                <mvvm:PopupWindowAction.WindowContent>
                                    <views1:СhangeСourse/>
                                </mvvm:PopupWindowAction.WindowContent>
                            </mvvm:PopupWindowAction>
                        </mvvm:InteractionRequestTrigger>
                    </i:Interaction.Triggers>
                </MenuItem>
            </MenuItem>
            <MenuItem Height="20"  Header="Гарантия" Command="{Binding NavigateCommand}" CommandParameter="ShowWarranties"
                      Visibility="{Binding Converter={StaticResource VisibilityFromRole}, Path=Role, ConverterParameter=ShowWarranties}"/>
            <MenuItem Header="Отчет"  Visibility="{Binding Converter={StaticResource VisibilityFromRole}, Path=Role, ConverterParameter=Reports}">
                <MenuItem Header="Отчет" Command="{Binding NavigateCommand}" CommandParameter="ShowFinalReport"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="ContentRegionMain" mvvm:RegionManager.RegionName="ContentRegion" Margin="10, 28, 0, 0"/>
    </Grid>
</Window>







